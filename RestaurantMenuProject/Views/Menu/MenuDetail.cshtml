@model IEnumerable<EntityLayer.Concrete.Food>
@{
    ViewData["Title"] = "MenuDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int order = 1;
}

<br />
<div class="card">
    <div class="card-header">
        <h3 class="card-title">@ViewBag.category Listesi</h3>
        @*<a class="float-right btn btn-outline-warning" href="/MachineCategory/Add">Kategori Ekle</a>*@
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example2" class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Fiyat</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@order</td>
                        <td>@item.Title</td>
                        <td>@item.Price ₺</td>
                        @*<td><a href="/MachineCategory/Delete/@item.MachineCategoryId" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/MachineCategory/Edit/@item.MachineCategoryId" class="btn btn-outline-success">Düzenle</a></td>*@
                    </tr>
                    order++;
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Fİyat</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>